<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-black"
        android:paddingBottom="24dp"
        android:text="About Me"
        android:textColor="#007AFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:contentDescription="Student Profile Picture"
        android:src="@drawable/profile" />

    <!-- Full Name -->
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Full Name: Mohammad Aqeel bin Zolkarnan"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Student ID -->
    <TextView
        android:id="@+id/textViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Student ID: 2023371653"
        android:textColor="#D1D1D6"
        android:textSize="16sp" />

    <!-- Course Info -->
    <TextView
        android:id="@+id/textViewCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Course: ICT602 - MOBILE TECHNOLOGY AND DEVELOPMENT"
        android:textColor="#D1D1D6"
        android:textSize="16sp" />

    <!-- Clickable URL -->
    <TextView
        android:id="@+id/textViewURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:autoLink="web"
        android:clickable="true"
        android:text="Visit My GitHub"
        android:textColor="#007AFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Spacer to push footer to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Copyright -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Â© 2025 EBill Calculator Mohammad Aqeel"
        android:textColor="#A0A0A0"
        android:textSize="14sp" />

</LinearLayout>
